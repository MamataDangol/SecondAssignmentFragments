<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="20dp"
    android:background="@color/colorPrimary"
    tools:context=".Fragments.SimpleInterestFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple Interest"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/etPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:hint="Enter the Principal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:hint="Enter the Time"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:hint="Enter the Rate"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="number"/>

    <Button
        android:id="@+id/btncalculateSI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textSize="20sp"/>


</LinearLayout>